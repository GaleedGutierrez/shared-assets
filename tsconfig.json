{
	"compilerOptions": {
		"target": "es2023",
		"useDefineForClassFields": true,
		"lib": ["es2023"],
		"module": "ESNext",
		"skipLibCheck": true,

		/* Bundler mode */
		"allowImportingTsExtensions": false,
		"isolatedModules": true,
		"verbatimModuleSyntax": true,
		"moduleDetection": "force",
		"noEmit": false,

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"erasableSyntaxOnly": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedSideEffectImports": true,
		"forceConsistentCasingInFileNames": true,

		/* Build */
		"outDir": "./dist",
		"declaration": true,
		"declarationMap": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "bundler",

		/* Paths */
		"baseUrl": ".",
		"paths": {
			"/*": ["./public/*"],
			"@public/*": ["./public/*"],
			"@app/*": ["./app/*"],
			"@tests/*": ["./tests/*"],
			"@e2e/*": ["tests/e2e/*"],
			"@/*": ["./src/*"],
			"@application/*": ["./src/application/*"],
			"@assets/*": ["./src/assets/*"],
			"@components/*": ["./src/components/*"],
			"@constants/*": ["./src/constants/*"],
			"@context/*": ["./src/context/*"],
			"@data/*": ["./src/data/*"],
			"@domain/*": ["./src/domain/*"],
			"@guard/*": ["./src/guard/*"],
			"@hooks/*": ["./src/hooks/*"],
			"@icons/*": ["./src/assets/icons/*"],
			"@images/*": ["./src/assets/images/*"],
			"@infrastructure/*": ["./src/infrastructure/*"],
			"@models/*": ["./src/models/*"],
			"@modules/*": ["./src/modules/*"],
			"@pages/*": ["./src/pages/*"],
			"@private/*": ["./src/private/*"],
			"@ui/*": ["./src/components/ui/*"],
			"@redux/*": ["./src/redux/*"],
			"@routes/*": ["./src/routes/*"],
			"@services/*": ["./src/services/*"],
			"@state/*": ["./src/state/*"],
			"@shared": ["src/utils/*"],
			"@store/*": ["./src/store/*"],
			"@styles/*": ["./src/styles/*"],
			"@sections/*": ["./src/sections/*"],
			"@templates/*": ["./src/templates/*"],
			"@utils/*": ["src/utils/*"],
			"@views/*": ["./src/views/*"]
		}
	},
	"include": ["src/**/*", "scripts/**/*", "**/*.ts"],
	"exclude": [
		"node_modules",
		"dist",
		"dist-dev",
		"build",
		"coverage",
		"playwright-reports",
		"test-results",
		"lighthouse-report"
	]
}
